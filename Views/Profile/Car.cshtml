
@{
    ViewBag.Title = "Car";
}

<div class="container">
    <h1 class="display-4 fw-bold mb-4">My Car Details:</h1>
    <div class="card ">
        <div class="card-body p-0">
            <div class="card-header">
                <h1>@ViewBag.Account.Car.Model</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">PlateNumber</label>
                        <input type="text" class="form-control" value="@ViewBag.Account.Car.PlateNumber" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Year</label>
                        <input type="number" class="form-control" value="@ViewBag.Account.Car.Year" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Color</label>
                        <input type="text" class="form-control" value="@ViewBag.Account.Car.Color" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Capacity</label>
                        <input type="number" class="form-control" value="@ViewBag.Account.Car.Seat" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

