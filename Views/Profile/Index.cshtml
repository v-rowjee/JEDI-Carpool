
@{
    ViewBag.Title = "Account";
}

<div class="container">
    <div class="row g-5">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <ul class="nav nav-pills mb-auto">
                        <li class="nav-item w-100">
                            @Html.ActionLink("Account", "Index", "Profile", null, new { @class = "nav-link link-light active" })
                        </li>
                        <li class="nav-item w-100">
                            @Html.ActionLink("Car", "Index", "Car", null, new { @class = "nav-link link-dark" })
                        </li>
                        <li class="nav-item w-100"><hr></li>
                        <li class="nav-item w-100">
                            @Html.ActionLink("Log Out", "Logout", "Home", null, new { @class = "nav-link link-dark" })
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <h1 class="display-4 fw-bold mb-5">Account Details:</h1>
            <div class="card">
                <div class="card-body p-0">
                    <div class="card-header">
                        <label class="form-label fw-bold">Email</label>
                        <input type="text" class="form-control mb-3" value="@ViewBag.Account.Email" />
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.FirstName" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.LastName" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.Address" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">City</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.City" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Country</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.Country" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form id="accountForm" class="my-3">
                <input type="submit" id="save" class="btn btn-primary px-5" value="Save Changes" />
                <input type="submit" id="cancel" class="btn btn-outline-primary" value="Cancel" />
            </form>
        </div>
    </div>
</div>



