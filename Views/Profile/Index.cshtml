
@{
    ViewBag.Title = "Account";
}

<div class="container">
    <div class="row g-5">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <ul class="nav nav-pills mb-auto">
                        <li class="nav-item w-100">
                            @Html.ActionLink("Account", "Index", "Profile", null, new { @class = @ViewBag.Title == "Account" ? "nav-link link-light active" : "nav-link link-dark" })
                        </li>
                        <li class="nav-item w-100 mb-3">
                            @Html.ActionLink("Car", "Index", "Car", null, new { @class = @ViewBag.Title == "Car" ? "nav-link link-light active" : "nav-link link-dark" })
                        </li>
                        <li class="nav-item w-100"><hr></li>
                        <li class="nav-item w-100">
                            @Html.ActionLink("Log Out", "Logout", "Home", null, new { @class = "nav-link link-dark" })
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <h1 class="display-4 fw-bold mb-5">Account Details:</h1>
            <form id="accountForm">
                <div class="card mb-3">
                    <div class="card-header">
                        <label class="form-label fw-bold">Email</label>
                        <input type="text" class="form-control mb-3" value="@ViewBag.Account.Email" readonly />
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.FirstName" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.LastName" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Phone</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Phone" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.Address" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">City</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.City" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Country</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.Country" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="my-2 float-end">
                    @Html.ActionLink("Edit", "Edit", "Profile", null, new { @class= "btn btn-sm btn-secondary me-2 px-5" })
                    <input type="button" id="delete" class="btn btn-sm btn-danger px-5" value="Delete" disabled />
                </div>
            </form>
        </div>
    </div>
</div>



