
@{
    ViewBag.Title = "New Car";
}

<div class="container">
    <div class="row g-5">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <ul class="nav nav-pills mb-auto">
                        <li class="nav-item w-100">
                            @Html.ActionLink("Account", "Index", "Profile", null, new { @class = "nav-link link-dark" })
                        </li>
                        <li class="nav-item w-100 mb-3">
                            @Html.ActionLink("Car", "Car", "Profile", null, new { @class = "nav-link link-light active" })
                        </li>
                        <li class="nav-item w-100">
                            @Html.ActionLink("Log Out", "Logout", "Home", null, new { @class = "nav-link link-dark" })
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <h1 class="display-4 fw-bold mb-5">Car Details:</h1>
            <div class="card mb-3">
                <div class="card-body p-0">
                    <div class="card-header">
                        <label class="form-label">Car Model</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">PlateNumber</label>
                                <input type="text" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Year</label>
                                <input type="number" class="form-control" value="@DateTime.Now.Year" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Color</label>
                                <input type="text" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Capacity</label>
                                <input type="number" class="form-control" min=1/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form id="newCarForm" class="my-3">
                <input type="submit" id="create" class="btn btn-primary px-5" value="Add New Car" />
                <input type="submit" id="cancel" class="btn btn-outline-primary" value="Cancel" />
            </form>
        </div>
    </div>
</div>

