
@{
    ViewBag.Title = "Account";
}
@section scripts {
    <script src="~/Scripts/account.js"></script>
}

<div class="container">
    <div class="row g-5">
        <div class="col-md-3">
            @Html.Partial("~/Views/Shared/_SideNav.cshtml")
        </div>
        <div class="col-md-9">
            <h1 class="display-4 fw-bold mb-5">Account Details:</h1>
            <form id="accountForm">
                <div class="card mb-3">
                    <div class="card-header">
                        <label class="form-label fw-bold">Email</label>
                        <input type="text" class="form-control mb-3" value="@ViewBag.Account.Email" readonly />
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.FirstName" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.LastName" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Phone</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Phone" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.Region" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">City</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.City" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Country</label>
                                <input type="text" class="form-control" value="@ViewBag.Account.Address.Country" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="my-2 float-end">
                    @Html.ActionLink("Edit", "Edit", "Account", null, new { @class = "btn btn-sm btn-secondary me-2 px-5" })
                    <button type="button" class="btn btn-sm btn-danger px-5" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="deleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Account Deletion</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    By deleting this account you are deleting all current rides and bookings. You will no longer be able to access logged in features.
                </p>
                <p>
                    Press the delete button below to confirm the deletion of your account.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="delete" class="btn btn-danger px-5">Delete</button>
            </div>
        </div>
    </div>
</div>



