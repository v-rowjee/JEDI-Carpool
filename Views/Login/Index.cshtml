
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

@section scripts {
    <script src="~/Scripts/login.js"></script>
}

<div class="container">

    <div class="row align-items-center mt-3">
        <div class="col-md-6">
            <img src="~/Content/Images/login.png" class="img-fluid" alt="login" />
        </div>
        <div class="col-md-6 px-5">
            <h2 class="display-4 fw-bold">Welcome Back!</h2>
            <form id="loginForm" class="my-5">
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="mb-5">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password">
                </div>
                <button type="submit" id="login" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</div>

